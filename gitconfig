[user]
	name = Alexey Reznikov
	email = alexey@reznikov.eu

[core]
    whitespace = warn,space-before-tab,trailing-space
	eol = lf
	autocrlf = input
	editor = code --wait
	symlinks = false
	trustctime = false # https://stackoverflow.com/questions/15136590
	precomposeunicode = false # http://michael-kuehnel.de/git/2014/11/21/git-mac-osx-and-german-umlaute.html
	pager = delta | less -RFX

[commit]
	gpgsign = true

[alias]
	st = status -s
	ci = commit
	graph = log --graph --decorate --stat --date=iso --all
	overview = log --oneline --no-merges
    fp = fetch --prune

[log]
	date = iso

[github]
	user = reznikov

[pull]
	rebase = true

[rebase]
	autoStash = true

[diff]
  # Detect copies as well as renames
  renames = copies

[delta]
  light = true
  navigate = true
  syntax-theme = github
  line-numbers = true
  side-by-side = true
